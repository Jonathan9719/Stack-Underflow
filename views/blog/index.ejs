    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <h1>Blog Feed</h1>
                    <% if (posts.length > 0) { %>
                        <div class="list">
                            <% for (let post of posts.reverse()) { %>
                                <article class="post-item">
                                    <h2><%= post.title %></h2>
                                    <p><%= post.postContent %></p>
                                </article>
                            
                            <% } %>

                        </div>
                    
                <% } else { %>
                    <h1>No Posts Yet!!</h1>
                <% } %>               
            </main>
            <%- include('../includes/end.ejs') %>